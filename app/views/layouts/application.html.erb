<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Book Store</title>
	<link href='http://fonts.googleapis.com/css?family=Dosis:300,400' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<%= stylesheet_link_tag    'huong-style.css', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'colorbox.css', media: 'all', 'data-turbolinks-track' => true%>
	<%= stylesheet_link_tag    'settings.css', media: 'all', 'data-turbolinks-track' => true%>
	<%= stylesheet_link_tag    'style.css', media: 'all', 'data-turbolinks-track' => true%>
	<%= stylesheet_link_tag    'animate.css', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>

  <%=render "layouts/header"%>
  <%=yield%>
  <%=render "layouts/footer"%>

	<!-- include js files -->
	<%= javascript_include_tag 'jquery.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'jquery.bxslider.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'jquery-ui-1.10.4.custom.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'jquery.colorbox-min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'Animo.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'dug.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'scripts.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'jquery.themepunch.tools.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'jquery.themepunch.revolution.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'waypoints.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'wow.min.js', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'custom2.js', 'data-turbolinks-track' => true %>
	<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
	<script>
	$(document).ready(function($) {    
		$(window).scroll(function(){
			if($(this).scrollTop()>150){
			$(".header-bottom").addClass('fixNav')
			}else{
				$(".header-bottom").removeClass('fixNav')
			}}
		)
	})
	</script>
</body>
</html>
