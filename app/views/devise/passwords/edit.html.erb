<div class="container" style="padding-left:50px; padding-right:300px">
    <div id="content">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
            <h2>Đổi mật khẩu</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, "Mật khẩu mới" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> Kí tự tối thiểu)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , :class => 'form-control'%>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirm new password" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
              </div>

              <div class="actions">
                <%= f.submit "Đổi mật khẩu", :class => 'btn btn-primary' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div> <!-- #content -->
</div> <!-- .container -->
